<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/top_bar">
        <TextView
            android:layout_width="@dimen/header_width"
            android:layout_height="@dimen/header_height"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/register"
            android:layout_marginBottom="@dimen/margin_bottom_small"
            />

        <Button
           android:id="@+id/to_login"
            android:text="@string/back_to_login"
            android:layout_width="@dimen/button_width_big"
            android:layout_height="@dimen/button_height"
            android:textSize="@dimen/medium_text_size"
            />


    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/first_name"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/first_name"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                     />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/last_name"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/last_name"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/email"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_txt_input_register"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/email_register"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/password"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_txt_input_register"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/password_register"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/mobile"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobile_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/mobile"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/street_number"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/street_number_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/street_number"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/street_address"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/street_address_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/street_address"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/city"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/city"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height"
                android:textSize="@dimen/small_text_size"
                android:text="@string/zipcode"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/zipcode_txt_input"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:id="@+id/zipcode"
                    android:layout_marginBottom="@dimen/margin_bottom_small"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_register"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/register"
                android:layout_marginBottom="@dimen/margin_bottom_small"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/res_register"
                android:layout_marginBottom="100dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>